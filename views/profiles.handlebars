<div class="row">
  <div class="col-lg-12" id="headerRow">

    <section class="page-header">
      <h1 id="welcome">
      {{#if user}}
        {{user}}'s profile
      {{/if}}
      </h1>
      <form method="post" action="/users/profile/{{user}}/follow">
        <div class="form-group">
          <label for="followUser" class="sr-only">User</label>
          <input id="followUser" type="hidden" name="user" value={{user}}></input>
        </div>
        <button class="btn btn-info" type="submit">Follow</button>
      </form>
      <form method="post" action="/users/profile/{{user}}/unfollow">
        <div class="form-group">
          <label for="unfollowUser" class="sr-only">User</label>
          <input id="unfollowUser" type="hidden" name="user" value={{user}}></input>
        </div>
        <button class="btn btn-info" type="submit">Unfollow</button>
      </form>
    </section>    
  </div>
</div>

